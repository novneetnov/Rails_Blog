<div class="post_wrapper">
	<h1 class="title">
		<%= @post.title %>
	</h1>
	<p class="date">Submitted 
		<%= time_ago_in_words(@post.created_at) %> Ago
		| <button class="button"><%= link_to "Edit", edit_post_path %></button>
		| <button class="button"><%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you Sure"} %></button>
	</p>
	<p class="body">
		<%= @post.body %>
	</p>
</div>
